<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/voice_call_rl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="22dp"
        android:gravity="center"
        android:background="#0B796F"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WHATSAPP CALL"
            android:textSize="16dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/user_destination_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mhd abdallah"
            android:textSize="32dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/call_caller_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04:44"
            android:textSize="18dp"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/user_destination_image"
        android:layout_below="@+id/header_call"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_call"
        android:background="@drawable/signup_photo"
        />

    <ImageView
        android:id="@+id/end_call_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/user_destination_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:padding="12dp"
        android:background="@drawable/call_ended_icon_round_red"
        android:src="@drawable/ic_call_end_black_24dp"/>

    <RelativeLayout
        android:id="@+id/bottom_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:layout_alignParentBottom="true"
        android:background="#0B796F">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_volume_up_black_24dp"
            android:layout_alignParentStart="true"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_mode_comment_black_24dp"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_keyboard_voice_black_24dp"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>


</RelativeLayout>